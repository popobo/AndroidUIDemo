<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:background="@drawable/selector_white_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="C"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/plusMinus"
            android:background="@drawable/selector_white_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="+/-"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:background="@drawable/selector_white_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="%"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="/"
            android:background="@drawable/selector_orange_bg"
            android:onClick="onOrangeClick"
            android:gravity="center"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:onClick="oneOnClick"
            android:background="@drawable/selector_white_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:background="@drawable/selector_white_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:background="@drawable/selector_white_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="3"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="x"
            android:background="@drawable/selector_orange_bg"
            android:onClick="onOrangeClick"
            android:gravity="center"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:onClick="oneOnClick"
            android:background="@drawable/selector_white_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="4"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:background="@drawable/selector_white_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="5"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:background="@drawable/selector_white_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="6"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="-"
            android:background="@drawable/selector_orange_bg"
            android:onClick="onOrangeClick"
            android:gravity="center"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:onClick="oneOnClick"
            android:background="@drawable/selector_white_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="7"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:background="@drawable/selector_white_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="8"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:background="@drawable/selector_white_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="9"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_orange_bg"
            android:onClick="onOrangeClick"
            android:gravity="center"
            android:text="+"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:onClick="oneOnClick"
            android:background="@drawable/selector_white_bg"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="0"
            android:gravity="center_vertical"
            android:paddingLeft="45dp"
            android:textSize="30sp"/>

        <TextView
            android:onClick="oneOnClick"
            android:background="@drawable/selector_white_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="."
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="="
            android:gravity="center"
            android:background="@drawable/selector_orange_bg"
            android:onClick="onOrangeClick"
            android:textSize="30sp"/>


    </LinearLayout>



</LinearLayout>